      "steps": [
        {
          "type": "configure",
          "name": "dbg-std"
        },
        {
          "type": "build",
          "name": "dbg-std-build"
        },
        {
          "type": "build",
          "name": "dbg-std-install"
        }
      ]
    }
  ]
}